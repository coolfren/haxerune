<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="HaxeRune" package="com.sample.haxerune" version="1.0.0" company="Company Name" />
	<app main="Main" path="Export" file="HaxeRune" />
	<source path="Source" />
	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<set name="BUILD_DIR" value="export/32bit" if="32" />
	<haxelib name="lime" />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="false" vsync="false"/>
	<window width="640" height="480" fps="" background="#000000" hardware="true" vsync="false" />
	

	<assets path="Assets" rename="assets" />

	<!-- Flixel Libraries-->

	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="flixel-ui"/>

	<!-- Flixel Settings-->

	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

	<!-- Other Libraries-->

	<haxelib name="discord_rpc" if="desktop"/>
	<haxelib name="hscript"/>
	<haxelib name="extension-webm"/>
	
</project>